{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer class="node__meta">
      {{ author_picture }}
      <div{{ author_attributes.addClass('node__submitted') }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes.addClass('node__content', 'text') }}>
    {{ content }}

    <div class="landing-grid landing-grid__front">
      {{ frontpage_articles_large }}
      <div class="landing-grid__item bundle-guide">
        <div class="grid-item__background">
          <canvas width="1" height="1"></canvas>
        </div>
        <div class="grid-item__content">
          {{ frontpage_guide_first }}
        </div>
      </div>
      <div class="landing-grid__item bundle-guide">
        <div class="grid-item__background color-beige">
          <canvas width="1" height="1"></canvas>
        </div>
        <div class="grid-item__content">
          {{ frontpage_guide_second }}
        </div>
      </div>
    </div>
    
  </div>

</article>